@{
    ViewData["Title"] = "Movie List";
}

@model List<MovieDatabase>

<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Movie Title</td>
            <td>Director</td>
            <td>Year</td>
            <td>Rating</td>
            <td>Category</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.Title</td>
            <td>@x.Director</td>
            <td>@x.Year</td>
            <td>@x.Rating</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.Notes</td>
        </tr>
            }
    </tbody>

</table>
